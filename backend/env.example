# ============================================
# CONFIGURAÇÕES DE SEGURANÇA
# ============================================
# OBRIGATÓRIO: Defina uma SECRET_KEY forte para produção
# Gere uma chave segura: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# ============================================
# CONFIGURAÇÕES DO SERVIDOR
# ============================================
# Porta do servidor Flask
FLASK_PORT=5000
# Host do servidor Flask
FLASK_HOST=0.0.0.0
# Modo debug (desabilitar em produção)
FLASK_DEBUG=True

# Porta do Gunicorn (produção)
GUNICORN_PORT=8000
# Host do Gunicorn
GUNICORN_HOST=0.0.0.0

# Porta do frontend (para scripts de desenvolvimento)
FRONTEND_PORT=5173

# ============================================
# CONFIGURAÇÕES AWS
# ============================================
# Região AWS
AWS_REGION=us-east-1

# Nome do bucket S3 para fotos
S3_BUCKET=registraponto-prod-fotos

# Nome da collection do Rekognition
REKOGNITION_COLLECTION=registraponto-faces

# Threshold de similaridade facial (0-100)
# Recomendado: 85-90 para produção, 70-80 para desenvolvimento
REKOGNITION_THRESHOLD=85

# Habilitar Rekognition (1 = sim, 0 = não)
ENABLE_REKOGNITION=1

# ============================================
# CONFIGURAÇÕES DYNAMODB
# ============================================
# Nomes das tabelas DynamoDB
DYNAMODB_TABLE_EMPLOYEES=Employees
DYNAMODB_TABLE_RECORDS=TimeRecords
DYNAMODB_TABLE_USERS=UserCompany
DYNAMODB_TABLE_CONFIG=ConfigCompany

# ============================================
# CONFIGURAÇÕES DE SSL (Desenvolvimento)
# ============================================
# Desabilitar SSL em desenvolvimento (1 = desabilitar, 0 = habilitar)
DISABLE_SSL_DEV=0

# ============================================
# CONFIGURAÇÕES DE URL (Opcional)
# ============================================
# URL base do backend (para testes e documentação)
BACKEND_URL=http://localhost:5000
# URL base do frontend (para testes e documentação)
FRONTEND_URL=http://localhost:5173

# ============================================
# CONFIGURAÇÕES DE DEPLOY (Opcional)
# ============================================
# Domínio do servidor (para nginx, certificados, etc)
SERVER_DOMAIN=localhost
# IP do servidor (para certificados auto-assinados)
SERVER_IP=127.0.0.1

